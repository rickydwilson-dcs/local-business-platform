{
  "name": "local-business-platform",
  "version": "1.0.0",
  "private": true,
  "description": "White-label website platform for local service businesses",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "create:site": "tsx tools/create-site.ts",
    "deploy:site": "tsx tools/deploy-site.ts",
    "deploy:batch": "tsx tools/deploy-batch.ts",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^20",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "turbo": "^2.4.3",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.18.2",
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
