{
  "name": "colossus-scaffolding",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "validate:content": "tsx scripts/validate-content.ts all",
    "validate:services": "tsx scripts/validate-content.ts services",
    "validate:locations": "tsx scripts/validate-content.ts locations",
    "pre-commit-check": "npm run lint && npm run type-check && npm run validate:content && npm run build",
    "deploy:production": "./scripts/deploy-to-production.sh",
    "prepare": "husky install"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.1",
    "@types/leaflet": "^1.9.20",
    "@upstash/redis": "^1.35.4",
    "gray-matter": "^4.0.3",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.544.0",
    "next": "15.5.2",
    "next-mdx-remote": "^5.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-leaflet": "^5.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "resend": "^6.1.0",
    "zod": "^4.1.11"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@mdx-js/loader": "^3.1.1",
    "@next/mdx": "^15.5.2",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "contentlayer2": "^0.5.8",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.6",
    "next-contentlayer2": "^0.5.8",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
