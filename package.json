{
  "name": "local-business-platform",
  "version": "1.0.0",
  "private": true,
  "description": "White-label website platform for local service businesses",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:e2e:smoke": "turbo run test:e2e:smoke",
    "test:e2e:ui": "turbo run test:e2e:ui",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "create:site": "tsx tools/create-site.ts",
    "deploy:site": "tsx tools/deploy-site.ts",
    "deploy:batch": "tsx tools/deploy-batch.ts",
    "images:manifest": "tsx tools/generate-image-manifest.ts",
    "images:generate": "tsx tools/generate-images-ai.ts",
    "images:batch:create": "tsx tools/generate-images-batch.ts create",
    "images:batch:status": "tsx tools/generate-images-batch.ts status",
    "images:batch:download": "tsx tools/generate-images-batch.ts download",
    "images:upload": "tsx tools/upload-generated-images.ts",
    "images:intake": "tsx tools/images-intake.ts",
    "images:update-mdx": "tsx tools/update-mdx-images.ts",
    "images:pipeline": "pnpm images:manifest && pnpm images:generate && pnpm images:upload && pnpm images:update-mdx",
    "rename:images": "tsx tools/rename-existing-images.ts",
    "update:r2-urls": "tsx tools/update-to-r2-urls.ts",
    "test:r2": "tsx tools/test-r2-connection.ts",
    "setup:vercel-env": "tsx tools/setup-vercel-env.ts",
    "setup:vercel-env-v2": "tsx tools/setup-vercel-env-v2.ts",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.913.0",
    "@changesets/cli": "^2.29.8",
    "@eslint/eslintrc": "^3.3.3",
    "@google/generative-ai": "^0.24.1",
    "@types/node": "^20",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.4",
    "tsx": "^4.20.6",
    "turbo": "^2.4.3",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.18.2",
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "vite": ">=7.1.11"
    }
  }
}
